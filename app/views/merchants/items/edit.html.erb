<h1> Item Update Page </h1>
<%= form_with url: "/merchants/#{@merchant.id}/items/#{@item.id}", method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :unit_price %>
  <%= f.number_field :unit_price %>
  <%= f.submit "Update Item" %>
<% end %>