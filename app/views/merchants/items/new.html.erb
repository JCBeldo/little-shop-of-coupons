<%= form_with url: merchant_items_path(@merchant), local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :unit_price %>
  <%= f.text_field :unit_price %>
  <%= f.hidden_field :status, value: "disabled" %>
  <%= f.submit "Create Item" %>
<% end %>